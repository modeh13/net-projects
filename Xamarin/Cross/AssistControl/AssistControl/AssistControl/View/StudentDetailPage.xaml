<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AssistControl.View.StudentDetailPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Nombre" />
                <Entry Text="{Binding Name}" />

                <Label Text="Apellido" />
                <Entry Text="{Binding LastName}" />

                <Label Text="Promedio" />
                <Entry Text="{Binding Average}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>